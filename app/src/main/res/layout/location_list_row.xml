<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/locationIcon"
        android:src="@drawable/staticicon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location Title"
        android:id="@+id/locationTitle"
        android:layout_toEndOf="@+id/locationIcon"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/locationDistance"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="00km"
        android:id="@+id/locationDistance"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentEnd="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="2dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the text below the title"
        android:id="@+id/locationText"
        android:layout_below="@+id/locationTitle"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/locationIcon"
        android:ellipsize="end"
        android:maxLines="1"
        />


</RelativeLayout>
